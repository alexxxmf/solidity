<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.freeformers.b2c.digitalmentor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
      android:name=".MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:allowBackup="true"
      android:theme="@style/AppTheme"
      xmlns:tools="http://schemas.android.com/tools">

      <activity
        android:name=".SplashActivity"
        android:theme="@style/SplashTheme"
        android:label="@string/app_name">
        <intent-filter>
          <action android:name="android.intent.action.MAIN" />
          <category android:name="android.intent.category.LAUNCHER" />
          <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
        </intent-filter>
      </activity>

      <!-- Launcher Activity to handle incoming Branch intents -->
      <activity
        android:name=".MainActivity"
        android:launchMode="singleTask"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustResize">

        <!-- Branch URI Scheme -->
        <intent-filter>
          <data android:scheme="digitalmentor" />
          <action android:name="android.intent.action.VIEW" />
          <category android:name="android.intent.category.DEFAULT" />
          <category android:name="android.intent.category.BROWSABLE" />
        </intent-filter>

        <!-- Branch App Links (optional) -->
        <intent-filter android:autoVerify="true">
          <action android:name="android.intent.action.VIEW" />
          <category android:name="android.intent.category.DEFAULT" />
          <category android:name="android.intent.category.BROWSABLE" />
          <data android:scheme="https" android:host="frf.app.link" />
          <data android:scheme="https" android:host="frf-alternate.app.link" />
          <data android:scheme="https" android:host="frf.test-app.link" />
          <data android:scheme="https" android:host="frf-alternate.test-app.link" />
        </intent-filter>
      </activity>

      <!-- Branch init -->
      <meta-data android:name="io.branch.sdk.BranchKey" android:value="key_live_dbt9W9FU4q6L69r8jYbNFhgotxdoYasC" />
      <meta-data android:name="io.branch.sdk.BranchKey.test" android:value="key_test_edwDakKcMeWzJ3hC3aZs9kniyuaWGCTa" />
      <meta-data android:name="io.branch.sdk.TestMode" android:value="false" />

      <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />

      <!-- Intercom init -->
      <service
        android:name="com.robinpowered.react.Intercom.IntercomIntentService"
        android:exported="false">
        <intent-filter
          android:priority="999">
            <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
        </intent-filter>
      </service>
      <receiver
        android:name="io.intercom.android.sdk.push.IntercomPushBroadcastReceiver"
        tools:replace="android:exported"
        android:exported="true" />
    </application>

</manifest>
